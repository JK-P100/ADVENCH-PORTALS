{"ast":null,"code":"import axios from 'axios';\nexport default {\n  data() {\n    return {\n      drawer: false,\n      sales: [],\n      showDetailsModal: false,\n      showAddSaleModal: false,\n      showEditSaleModal: false,\n      selectedSale: {},\n      newSale: {\n        rs_date: '',\n        tcp: '',\n        sales_manager: '',\n        project_name: '',\n        sales_person: '',\n        total: '',\n        buyer_name: '',\n        other_project: '' // ensure this is always present\n      },\n      editSaleData: {},\n      searchQuery: '',\n      dateMenu: false,\n      editDateMenu: false,\n      salesTab: 'yearly',\n      salesManagers: ['JK Polagne', 'Anna Lim', 'Mark Lee', 'Maria Santos', 'Jose Tan'],\n      projectNames: ['Camella', 'Astera', 'Santerra', 'Bria', 'Futura'],\n      displayDate: '',\n      editDisplayDate: '',\n      saleRules: {\n        required: v => !!v || 'This field is required',\n        number: v => /^\\d+(\\.\\d+)?$/.test(v) || 'Must be a number'\n      },\n      addSaleFormValid: false,\n      editSaleFormValid: false\n    };\n  },\n  watch: {\n    'newSale.rs_date': {\n      immediate: true,\n      handler(val) {\n        this.displayDate = val ? this.formatDate(val) : '';\n      }\n    },\n    'editSaleData.rs_date': {\n      immediate: false,\n      handler(val) {\n        this.editDisplayDate = val ? this.formatDate(val) : '';\n      }\n    }\n  },\n  computed: {\n    filteredSales() {\n      return this.sales.filter(sale => {\n        return sale.buyer_name.toLowerCase().includes(this.searchQuery.toLowerCase()) || sale.sales_person.toLowerCase().includes(this.searchQuery.toLowerCase());\n      });\n    },\n    filteredSalesByTab() {\n      const now = new Date();\n      const startOfWeek = new Date(now);\n      startOfWeek.setDate(now.getDate() - now.getDay());\n      const year = now.getFullYear();\n      const month = now.getMonth();\n      return this.filteredSales.filter(sale => {\n        const saleDate = new Date(sale.rs_date);\n        if (this.salesTab === 'yearly') {\n          return saleDate.getFullYear() === year;\n        } else if (this.salesTab === 'monthly') {\n          return saleDate.getFullYear() === year && saleDate.getMonth() === month;\n        } else if (this.salesTab === 'weekly') {\n          return saleDate >= startOfWeek && saleDate <= now;\n        }\n        return true;\n      });\n    },\n    yearlySales() {\n      const year = new Date().getFullYear();\n      return this.sales.filter(sale => new Date(sale.rs_date).getFullYear() === year).reduce((sum, sale) => sum + Number(sale.tcp), 0);\n    },\n    monthlySales() {\n      const now = new Date();\n      return this.sales.filter(sale => {\n        const d = new Date(sale.rs_date);\n        return d.getFullYear() === now.getFullYear() && d.getMonth() === now.getMonth();\n      }).reduce((sum, sale) => sum + Number(sale.tcp), 0);\n    },\n    weeklySales() {\n      const now = new Date();\n      const startOfWeek = new Date(now);\n      startOfWeek.setDate(now.getDate() - now.getDay());\n      return this.sales.filter(sale => {\n        const d = new Date(sale.rs_date);\n        return d >= startOfWeek && d <= now;\n      }).reduce((sum, sale) => sum + Number(sale.tcp), 0);\n    }\n  },\n  mounted() {\n    this.fetchSales();\n  },\n  methods: {\n    openAddSaleModal() {\n      this.newSale.rs_date = new Date().toISOString().slice(0, 10);\n      this.showAddSaleModal = true;\n    },\n    addSale() {\n      // Require date\n      if (!this.newSale.rs_date) {\n        alert('Please select a date for the sale.');\n        return;\n      }\n      // Ensure all required fields are present and rs_date is formatted for MySQL\n      const payload = {\n        ...this.newSale,\n        other_project: this.newSale.other_project || '',\n        rs_date: this.newSale.rs_date ? new Date(this.newSale.rs_date).toISOString().slice(0, 10) : ''\n      };\n      axios.post('http://localhost:3000/api/sales', payload).then(() => {\n        this.fetchSales(); // Refresh the table\n        this.showAddSaleModal = false;\n        this.newSale = {\n          rs_date: '',\n          tcp: '',\n          sales_manager: '',\n          project_name: '',\n          sales_person: '',\n          total: '',\n          buyer_name: '',\n          other_project: ''\n        };\n        this.$refs.addSaleForm.reset();\n      }).catch(error => {\n        let msg = 'Failed to add sale.';\n        if (error.response && error.response.data && error.response.data.details) {\n          msg += '\\n' + error.response.data.details;\n        }\n        alert(msg);\n        console.error('Error adding sale:', error);\n      });\n    },\n    openEditSaleModal(sale) {\n      this.editSaleData = {\n        ...sale\n      };\n      this.showEditSaleModal = true;\n    },\n    saveEditSale() {\n      // Update sale via API\n      const payload = {\n        ...this.editSaleData,\n        rs_date: this.editSaleData.rs_date ? new Date(this.editSaleData.rs_date).toISOString().slice(0, 10) : ''\n      };\n      axios.put(`http://localhost:3000/api/sales/${payload.id}`, payload).then(() => {\n        this.fetchSales();\n        this.showEditSaleModal = false;\n      }).catch(error => {\n        alert('Failed to update sale.');\n        console.error('Error updating sale:', error);\n      });\n    },\n    deleteSale(sale) {\n      if (confirm('Are you sure you want to delete this sale?')) {\n        axios.delete(`http://localhost:3000/api/sales/${sale.id}`).then(() => {\n          this.fetchSales();\n        }).catch(error => {\n          alert('Failed to delete sale.');\n          console.error('Error deleting sale:', error);\n        });\n      }\n    },\n    onDatePicked(val) {\n      this.newSale.rs_date = val;\n      this.dateMenu = false;\n    },\n    onEditDatePicked(val) {\n      this.editSaleData.rs_date = val;\n      this.editDateMenu = false;\n    },\n    formatDate(dateStr) {\n      if (!dateStr) return '';\n      const d = new Date(dateStr);\n      if (isNaN(d)) return dateStr;\n      const day = String(d.getDate()).padStart(2, '0');\n      const month = String(d.getMonth() + 1).padStart(2, '0');\n      const year = d.getFullYear();\n      return `${day}/${month}/${year}`;\n    },\n    viewSaleDetails(sale) {\n      this.selectedSale = sale;\n      this.showDetailsModal = true;\n    },\n    fetchSales() {\n      axios.get('http://localhost:3000/api/sales').then(response => {\n        this.sales = response.data;\n      }).catch(error => {\n        console.error('Error fetching sales:', error);\n      });\n    },\n    logout() {\n      localStorage.removeItem('isAuthenticated');\n      this.$router.push('/login');\n    }\n  }\n};","map":{"version":3,"names":["axios","data","drawer","sales","showDetailsModal","showAddSaleModal","showEditSaleModal","selectedSale","newSale","rs_date","tcp","sales_manager","project_name","sales_person","total","buyer_name","other_project","editSaleData","searchQuery","dateMenu","editDateMenu","salesTab","salesManagers","projectNames","displayDate","editDisplayDate","saleRules","required","v","number","test","addSaleFormValid","editSaleFormValid","watch","immediate","handler","val","formatDate","computed","filteredSales","filter","sale","toLowerCase","includes","filteredSalesByTab","now","Date","startOfWeek","setDate","getDate","getDay","year","getFullYear","month","getMonth","saleDate","yearlySales","reduce","sum","Number","monthlySales","d","weeklySales","mounted","fetchSales","methods","openAddSaleModal","toISOString","slice","addSale","alert","payload","post","then","$refs","addSaleForm","reset","catch","error","msg","response","details","console","openEditSaleModal","saveEditSale","put","id","deleteSale","confirm","delete","onDatePicked","onEditDatePicked","dateStr","isNaN","day","String","padStart","viewSaleDetails","get","logout","localStorage","removeItem","$router","push"],"sources":["C:\\Users\\jann kevin\\Desktop\\ADVENCH PORTALS\\frontend\\src\\components\\SalesTracking.vue"],"sourcesContent":["<template>\n  <v-app>\n    <!-- Navigation Drawer -->\n    <v-navigation-drawer v-model=\"drawer\" app color=\"grey darken-1\" dark width=\"240\" temporary>\n      <v-toolbar flat>\n        <v-spacer></v-spacer>\n        <v-btn icon @click=\"drawer = false\">\n          <v-icon>mdi-close</v-icon>\n        </v-btn>\n      </v-toolbar>\n      <v-list dense>\n        <v-list-item link :to=\"'/dashboard'\">\n          <v-list-item-icon><v-icon>mdi-account-group</v-icon></v-list-item-icon>\n          <v-list-item-title>DASHBOARD</v-list-item-title>\n        </v-list-item>\n        <v-list-item link :to=\"'/clients'\">\n          <v-list-item-icon><v-icon>mdi-account-group</v-icon></v-list-item-icon>\n          <v-list-item-title>CLIENT TRACKING</v-list-item-title>\n        </v-list-item>\n        <v-list-item link :to=\"'/agents'\">\n          <v-list-item-icon><v-icon>mdi-account-tie</v-icon></v-list-item-icon>\n          <v-list-item-title>AGENT TRACKING</v-list-item-title>\n        </v-list-item>\n        <v-list-item link :to=\"'/communications'\" >\n          <v-list-item-icon><v-icon>mdi-message-text-outline</v-icon></v-list-item-icon>\n          <v-list-item-title>COMMS. MGMT.</v-list-item-title>\n        </v-list-item>\n        <v-list-item link :to=\"'/sales-tracking'\">\n          <v-list-item-icon><v-icon>mdi-chart-line</v-icon></v-list-item-icon>\n          <v-list-item-title>SALES TRACKING</v-list-item-title>\n        </v-list-item>\n        <v-list-item link :to=\"{ name: 'PropertyListing' }\">\n          <v-list-item-icon><v-icon>mdi-home-city-outline</v-icon></v-list-item-icon>\n          <v-list-item-title>PROPERTY LISTING</v-list-item-title>\n        </v-list-item>\n        <v-list-item link @click=\"logout\">\n          <v-list-item-icon><v-icon>mdi-logout</v-icon></v-list-item-icon>\n          <v-list-item-title>LOGOUT</v-list-item-title>\n        </v-list-item>\n      </v-list>\n    </v-navigation-drawer>\n    <v-main>\n      <v-container>\n        <v-row align=\"center\" justify=\"space-between\" class=\"px-4\">\n          <v-col cols=\"auto\" class=\"d-flex align-center\">\n            <img src=\"../assets/logo.png\" alt=\"Advench Realty Logo\" style=\"max-width: 60px; margin-right: 12px;\" />\n            <div>\n              <h2 class=\"text-h6 font-weight-bold mb-0\">ADVЕNCH REALTY</h2>\n              <p class=\"text-subtitle-2 mb-0\">AND DEVELOPMENT CO.</p>\n            </div>\n          </v-col>\n          <v-col cols=\"auto\">\n            <v-btn icon @click=\"drawer = true\">\n              <v-icon color=\"green darken-4\">mdi-menu</v-icon>\n            </v-btn>\n          </v-col>\n        </v-row>\n        <!-- Title -->\n        <v-row class=\"mt-6 mb-4\">\n          <v-col cols=\"12\">\n            <h1 class=\"text-h4 font-weight-bold\">SALES TRACKING</h1>\n          </v-col>\n        </v-row>\n        <!-- Sales Tabs and Summary -->\n        <v-row class=\"mb-4\">\n          <v-col cols=\"12\">\n            <v-tabs v-model=\"salesTab\" background-color=\"#f5f5f5\" grow>\n              <v-tab value=\"yearly\">Yearly</v-tab>\n              <v-tab value=\"monthly\">Monthly</v-tab>\n              <v-tab value=\"weekly\">Weekly</v-tab>\n            </v-tabs>\n          </v-col>\n        </v-row>\n        <v-row class=\"mb-4\">\n          <v-col cols=\"12\">\n            <v-card class=\"pa-4\" :color=\"salesTab === 'yearly' ? '#e3f2fd' : salesTab === 'monthly' ? '#e8f5e9' : '#fffde7'\">\n              <div class=\"font-weight-bold\">\n                {{ salesTab.charAt(0).toUpperCase() + salesTab.slice(1) }} Sales\n              </div>\n              <div class=\"text-h5\">\n                ₱{{\n                  salesTab === 'yearly' ? yearlySales.toLocaleString() :\n                  salesTab === 'monthly' ? monthlySales.toLocaleString() :\n                  weeklySales.toLocaleString()\n                }}\n              </div>\n            </v-card>\n          </v-col>\n        </v-row>\n        <!-- Search Bar -->\n        <v-row class=\"mb-1\" align=\"center\">\n          <v-col cols=\"12\" md=\"10\">\n            <v-text-field\n              label=\"Search...\"\n              outlined\n              dense\n              hide-details\n              v-model=\"searchQuery\"\n            ></v-text-field>\n          </v-col>\n          <v-col cols=\"auto\" class=\"d-flex justify-end\">\n            <v-btn color=\"grey darken-1\" dark style=\"width: 150px;\">Search</v-btn>\n          </v-col>\n        </v-row>\n        <!-- Table -->\n        <v-row class=\"pa-0 ma-0\" style=\"width: 100%;\">\n          <v-col cols=\"12\" class=\"pa-0 ma-0\" style=\"width: 100%;\">\n            <div class=\"table-container\">\n              <v-simple-table dense class=\"custom-table\">\n                <template v-slot:default>\n                  <thead>\n                    <tr>\n                      <th class=\"table-header id-header\">ID</th>\n                      <th class=\"table-header\">RS Date</th>\n                      <th class=\"table-header\">Sales Manager</th>\n                      <th class=\"table-header\">Sales Person</th>\n                      <th class=\"table-header\">Name of Buyer</th>\n                      <th class=\"table-header\">TCP</th>\n                      <th class=\"table-header\">Project Name</th>\n                      <th class=\"table-header\">Other Project</th>\n                      <th class=\"table-header\">Total</th>\n                      <th class=\"table-header\">Actions</th> <!-- Added Actions column -->\n                    </tr>\n                  </thead>\n                  <tbody>\n                    <tr v-for=\"(sale, index) in filteredSalesByTab\" :key=\"index\" class=\"table-row\">\n                      <td>{{ sale.id }}</td>\n                      <td>{{ formatDate(sale.rs_date) }}</td>\n                      <td>{{ sale.sales_manager }}</td>\n                      <td>{{ sale.sales_person }}</td>\n                      <td>{{ sale.buyer_name }}</td>\n                      <td>₱{{ sale.tcp ? sale.tcp.toLocaleString() : '' }}</td>\n                      <td>{{ sale.project_name }}</td>\n                      <td>{{ sale.other_project }}</td>\n                      <td>{{ sale.total }}</td>\n                      <td>\n                        <v-btn icon color=\"green darken-2\" @click=\"openEditSaleModal(sale)\">\n                          <v-icon>mdi-pencil</v-icon>\n                        </v-btn>\n                        <v-btn icon color=\"red darken-2\" @click=\"deleteSale(sale)\">\n                          <v-icon>mdi-delete</v-icon>\n                        </v-btn>\n                      </td>\n                    </tr>\n                  </tbody>\n                </template>\n              </v-simple-table>\n            </div>\n          </v-col>\n        </v-row>\n        <!-- Add Button -->\n        <v-row justify=\"end\" class=\"mt-4 add-button-row\">\n          <v-col cols=\"auto\">\n            <v-btn color=\"grey darken-1\" dark style=\"width: 200px;\" @click=\"openAddSaleModal\">Add</v-btn>\n          </v-col>\n        </v-row>\n      </v-container>\n      <!-- Sale Details Modal -->\n      <v-dialog v-model=\"showDetailsModal\" max-width=\"500px\">\n        <v-card>\n          <v-card-title>Sale Details</v-card-title>\n          <v-card-text>\n            <p><strong>RS Date:</strong> {{ selectedSale.rs_date }}</p>\n            <p><strong>Buyer Name:</strong> {{ selectedSale.buyer_name }}</p>\n            <p><strong>TCP:</strong> ₱{{ selectedSale.tcp ? selectedSale.tcp.toLocaleString() : '' }}</p>\n            <p><strong>Sales Person:</strong> {{ selectedSale.sales_person }}</p>\n          </v-card-text>\n          <v-card-actions>\n            <v-btn color=\"green darken-1\" text @click=\"showDetailsModal = false\">Close</v-btn>\n          </v-card-actions>\n        </v-card>\n      </v-dialog>\n      <!-- Add Sale Modal -->\n      <v-dialog v-model=\"showAddSaleModal\" max-width=\"600px\">\n        <v-card>\n          <v-card-title class=\"d-flex align-center justify-center\">\n            <img src=\"../assets/logo.png\" alt=\"Advench Realty Logo\" style=\"max-width: 80px; margin-right: 16px;\" />\n            <span class=\"text-h5 font-weight-bold\">Add New Sales</span>\n          </v-card-title>\n          <v-card-text>\n            <v-form ref=\"addSaleForm\">\n              <v-row>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-menu\n                    v-model=\"dateMenu\"\n                    :close-on-content-click=\"false\"\n                    transition=\"scale-transition\"\n                    offset-y\n                    min-width=\"290px\"\n                  >\n                    <template v-slot:activator=\"{ on, attrs }\">\n                      <v-text-field\n                        v-model=\"displayDate\"\n                        label=\"DD/MM/YYYY\"\n                        readonly\n                        v-bind=\"attrs\"\n                        v-on=\"on\"\n                        dense\n                        outlined\n                        hide-details\n                        @click=\"dateMenu = true\"\n                      ></v-text-field>\n                    </template>\n                    <v-date-picker\n                      v-model=\"newSale.rs_date\"\n                      @input=\"onDatePicked\"\n                      :max=\"new Date().toISOString().substr(0, 10)\"\n                    ></v-date-picker>\n                  </v-menu>\n                </v-col>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-text-field v-model=\"newSale.tcp\" label=\"TCP\" type=\"number\" outlined dense></v-text-field>\n                </v-col>\n              </v-row>\n              <v-row>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-select v-model=\"newSale.sales_manager\" :items=\"salesManagers\" label=\"Sales Manager\" outlined dense></v-select>\n                </v-col>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-select v-model=\"newSale.project_name\" :items=\"projectNames\" label=\"Project Name\" outlined dense></v-select>\n                </v-col>\n              </v-row>\n              <v-row>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-text-field v-model=\"newSale.sales_person\" label=\"Sales Person\" outlined dense></v-text-field>\n                </v-col>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-text-field v-model=\"newSale.total\" label=\"Total\" type=\"number\" outlined dense></v-text-field>\n                </v-col>\n              </v-row>\n              <v-row>\n                <v-col cols=\"12\">\n                  <v-text-field v-model=\"newSale.buyer_name\" label=\"Name of Buyer\" outlined dense></v-text-field>\n                </v-col>\n              </v-row>\n            </v-form>\n          </v-card-text>\n          <v-card-actions class=\"d-flex justify-space-between\">\n            <v-btn text color=\"green\" @click=\"showAddSaleModal = false\">Cancel</v-btn>\n            <v-btn color=\"grey darken-1\" dark @click=\"addSale\">Confirm</v-btn>\n          </v-card-actions>\n        </v-card>\n      </v-dialog>\n      <!-- Edit Sale Modal -->\n      <v-dialog v-model=\"showEditSaleModal\" max-width=\"600px\">\n        <v-card>\n          <v-card-title class=\"d-flex align-center justify-center\">\n            <img src=\"../assets/logo.png\" alt=\"Advench Realty Logo\" style=\"max-width: 80px; margin-right: 16px;\" />\n            <span class=\"text-h5 font-weight-bold\">Edit Sale</span>\n          </v-card-title>\n          <v-card-text>\n            <v-form ref=\"editSaleForm\">\n              <v-row>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-menu\n                    v-model=\"editDateMenu\"\n                    :close-on-content-click=\"false\"\n                    transition=\"scale-transition\"\n                    offset-y\n                    min-width=\"290px\"\n                  >\n                    <template v-slot:activator=\"{ on, attrs }\">\n                      <v-text-field\n                        v-model=\"editDisplayDate\"\n                        label=\"DD/MM/YYYY\"\n                        readonly\n                        v-bind=\"attrs\"\n                        v-on=\"on\"\n                        dense\n                        outlined\n                        hide-details\n                        @click=\"editDateMenu = true\"\n                      ></v-text-field>\n                    </template>\n                    <v-date-picker\n                      v-model=\"editSaleData.rs_date\"\n                      @input=\"onEditDatePicked\"\n                      :max=\"new Date().toISOString().substr(0, 10)\"\n                    ></v-date-picker>\n                  </v-menu>\n                </v-col>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-text-field v-model=\"editSaleData.tcp\" label=\"TCP\" type=\"number\" outlined dense></v-text-field>\n                </v-col>\n              </v-row>\n              <v-row>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-select v-model=\"editSaleData.sales_manager\" :items=\"salesManagers\" label=\"Sales Manager\" outlined dense></v-select>\n                </v-col>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-select v-model=\"editSaleData.project_name\" :items=\"projectNames\" label=\"Project Name\" outlined dense></v-select>\n                </v-col>\n              </v-row>\n              <v-row>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-text-field v-model=\"editSaleData.sales_person\" label=\"Sales Person\" outlined dense></v-text-field>\n                </v-col>\n                <v-col cols=\"12\" md=\"6\">\n                  <v-text-field v-model=\"editSaleData.total\" label=\"Total\" type=\"number\" outlined dense></v-text-field>\n                </v-col>\n              </v-row>\n              <v-row>\n                <v-col cols=\"12\">\n                  <v-text-field v-model=\"editSaleData.buyer_name\" label=\"Name of Buyer\" outlined dense></v-text-field>\n                </v-col>\n              </v-row>\n              <v-row>\n                <v-col cols=\"12\">\n                  <v-text-field v-model=\"editSaleData.other_project\" label=\"Other Project\" outlined dense></v-text-field>\n                </v-col>\n              </v-row>\n            </v-form>\n          </v-card-text>\n          <v-card-actions class=\"d-flex justify-space-between\">\n            <v-btn text color=\"green\" @click=\"showEditSaleModal = false\">Cancel</v-btn>\n            <v-btn color=\"grey darken-1\" dark @click=\"saveEditSale\">Save</v-btn>\n          </v-card-actions>\n        </v-card>\n      </v-dialog>\n    </v-main>\n    <!-- Footer -->\n    <v-footer app color=\"green darken-4\" dark class=\"custom-footer\">\n      <v-container>\n        <span>Copyright © 2023. ADVЕNCH REALTY and development co. All rights Reserved.</span>\n      </v-container>\n    </v-footer>\n  </v-app>\n</template>\n\n<script>\nimport axios from 'axios';\n\nexport default {\n  data() {\n    return {\n      drawer: false,\n      sales: [],\n      showDetailsModal: false,\n      showAddSaleModal: false,\n      showEditSaleModal: false,\n      selectedSale: {},\n      newSale: {\n        rs_date: '',\n        tcp: '',\n        sales_manager: '',\n        project_name: '',\n        sales_person: '',\n        total: '',\n        buyer_name: '',\n        other_project: '', // ensure this is always present\n      },\n      editSaleData: {},\n      searchQuery: '',\n      dateMenu: false,\n      editDateMenu: false,\n      salesTab: 'yearly',\n      salesManagers: ['JK Polagne', 'Anna Lim', 'Mark Lee', 'Maria Santos', 'Jose Tan'],\n      projectNames: ['Camella', 'Astera', 'Santerra', 'Bria', 'Futura'],\n      displayDate: '',\n      editDisplayDate: '',\n      saleRules: {\n        required: v => !!v || 'This field is required',\n        number: v => /^\\d+(\\.\\d+)?$/.test(v) || 'Must be a number',\n      },\n      addSaleFormValid: false,\n      editSaleFormValid: false,\n    };\n  },\n  watch: {\n    'newSale.rs_date': {\n      immediate: true,\n      handler(val) {\n        this.displayDate = val ? this.formatDate(val) : '';\n      }\n    },\n    'editSaleData.rs_date': {\n      immediate: false,\n      handler(val) {\n        this.editDisplayDate = val ? this.formatDate(val) : '';\n      }\n    }\n  },\n  computed: {\n    filteredSales() {\n      return this.sales.filter((sale) => {\n        return (\n          sale.buyer_name.toLowerCase().includes(this.searchQuery.toLowerCase()) ||\n          sale.sales_person.toLowerCase().includes(this.searchQuery.toLowerCase())\n        );\n      });\n    },\n    filteredSalesByTab() {\n      const now = new Date();\n      const startOfWeek = new Date(now);\n      startOfWeek.setDate(now.getDate() - now.getDay());\n      const year = now.getFullYear();\n      const month = now.getMonth();\n      return this.filteredSales.filter(sale => {\n        const saleDate = new Date(sale.rs_date);\n        if (this.salesTab === 'yearly') {\n          return saleDate.getFullYear() === year;\n        } else if (this.salesTab === 'monthly') {\n          return saleDate.getFullYear() === year && saleDate.getMonth() === month;\n        } else if (this.salesTab === 'weekly') {\n          return saleDate >= startOfWeek && saleDate <= now;\n        }\n        return true;\n      });\n    },\n    yearlySales() {\n      const year = new Date().getFullYear();\n      return this.sales\n        .filter(sale => new Date(sale.rs_date).getFullYear() === year)\n        .reduce((sum, sale) => sum + Number(sale.tcp), 0);\n    },\n    monthlySales() {\n      const now = n